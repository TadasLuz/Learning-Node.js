doctype html
html
    head
        title Learning NodeJS
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
            a.navbar-brand(href='/') LNJS
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNavAltMarkup.collapse.navbar-collapse
                ul.nav.navbar-nav
                    a.nav-link(href='/') Home 
                    span.sr-only (current)
                    if user
                        li
                            a.nav-link(href='/articles/add') Add Article
                ul.nav.navbar-nav.navbar-right
                    if user
                        li
                            a.nav-link(href='/users/logout') Logout
                    else
                        li
                            a.nav-link(href='/users/register') Register
                        li
                            a.nav-link(href='/users/login') Login
                // a.nav-link.disabled(href='#', tabindex='-1', aria-disabled='true') Disabled
        .container
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            hr
            footer
                p Copyright &copy; 2020
        script(src='https://code.jquery.com/jquery-3.5.1.min.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')